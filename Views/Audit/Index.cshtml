<style>
    .table-scroll-container {
        height: calc(100vh - 420px); /* Adjust this value based on your header/footer/filter height */
        overflow-y: auto;
    }

    .table-scroll-container thead th {
        position: sticky;
        top: 0;
        z-index: 1;
        background: var(--white); /* This should match your thead background */
    }
    
    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        font-size: 0.875rem;
    }
    
    .breadcrumb-item + .breadcrumb-item::before {
        content: "/";
        color: var(--sidebar-text);
    }
    
    .card {
        border-radius: 12px;
    }
    
    .table th {
        border-top: none;
        padding: 1rem 0.75rem;
    }
    
    .table td {
        padding: 1rem 0.75rem;
        vertical-align: middle;
    }
    
    .badge {
        font-size: 0.75rem;
        padding: 0.5rem 1rem;
        font-weight: 500;
    }
    .status-badge {
        background-color: var(--status-green) !important;
        color: var(--sidebar-text);
    }
    
    .btn-outline-primary {
        border-color: var(--brand-blue);
        color: var(--brand-blue);
    }
    
    .btn-outline-primary:hover {
        background-color: var(--brand-blue);
        border-color: var(--brand-blue);
    }
    
    .form-select, .form-control {
        border-color: var(--sidebar-bg);
    }
    
    .form-select:focus, .form-control:focus {
        border-color: var(--brand-blue);
        box-shadow: 0 0 0 0.2rem rgba(var(--sidebar-bg), 124, 235, 0.25);
    }
    
    .page-link {
        color: #000; /* Black font color for pagination */
        border-color: var(--sidebar-bg);
    }
    
    .page-item.active .page-link {
        background-color: var(--brand-blue);
        border-color: var(--brand-blue);
    }
    
    .page-link:hover {
        color: var(--brand-blue);
        background-color: var(--white);
        border-color: var(--sidebar-bg);
    }
</style>
